generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["esports"]
}

enum PlayerStatus {
  ACTIVE
  INACTIVE
  RETIRED
  BANNED

  @@map("player_status")
  @@schema("esports")
}

enum TeamMemberRole {
  SUBSTITUTE
  CAPTAIN
  PLAYER
  COACH

  @@map("team_member_role")
  @@schema("esports")
}

enum SponsorTier {
  GOLD
  SILVER
  BRONZE

  @@map("sponsor_tier")
  @@schema("esports")
}

enum TournamentStatus {
  REGISTRATION_OPEN
  REGISTRATION_CLOSED
  IN_PROGRESS
  COMPLETED
  CANCELLED

  @@map("tournament_status")
  @@schema("esports")
}

enum TournamentFormat {
  SINGLE_ELIMINATION
  DOUBLE_ELIMINATION
  ROUND_ROBIN
  GROUP_STAGE
  SWISS

  @@map("tournament_format")
  @@schema("esports")
}

enum TournamentPhase {
  GROUPS
  ROUND_OF_32
  ROUND_OF_16
  QUARTERFINALS
  SEMIFINALS
  THIRD_PLACE
  FINALS

  @@map("tournament_phase")
  @@schema("esports")
}

model Player {
  id     Int          @id @default(autoincrement())
  name   String       @unique
  email  String       @unique
  isFree Boolean      @default(true)
  status PlayerStatus @default(ACTIVE)

  eloRating   Int @default(0)
  totalWins   Int @default(0)
  totalLosses Int @default(0)

  members Member[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("players")
  @@schema("esports")
}

model Team {
  id       Int     @id @default(autoincrement())
  tag      String  @unique
  name     String  @unique
  isActive Boolean @default(true)

  members            Member[]
  matchesAsTeamAlpha Match[]  @relation("TeamAlpha")
  matchesAsTeamBeta  Match[]  @relation("TeamBeta")
  matchesAsWinner    Match[]  @relation("Winner")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  matches   Match[]

  @@map("teams")
  @@schema("esports")
}

model Member {
  id       Int @id @default(autoincrement())
  teamId   Int
  playerId Int

  role     TeamMemberRole @default(PLAYER)
  joinedAt DateTime       @default(now())
  leftAt   DateTime?

  team   Team   @relation(fields: [teamId], references: [id])
  player Player @relation(fields: [playerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([playerId, teamId])
  @@map("members")
  @@schema("esports")
}

model Sponsor {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  tier       SponsorTier @default(BRONZE)
  logoUrl    String?
  websiteUrl String?

  contactEmail String?
  contactPhone String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sponsors")
  @@schema("esports")
}

model Game {
  id        Int    @id @default(autoincrement())
  title     String @unique
  genre     String
  developer String
  publisher String

  tournaments Tournament[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("games")
  @@schema("esports")
}

model Tournament {
  id     Int    @id @default(autoincrement())
  title  String @unique
  gameId Int

  status TournamentStatus @default(REGISTRATION_OPEN)
  format TournamentFormat @default(SINGLE_ELIMINATION)

  maxTeams    Int
  minTeamSize Int
  maxTeamSize Int

  prizePool Decimal
  currency  String

  registrationStart DateTime
  registrationEnd   DateTime
  tournamentStart   DateTime
  tournamentEnd     DateTime

  matches Match[]
  game    Game    @relation(fields: [gameId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tournaments")
  @@schema("esports")
}

model Match {
  id           Int  @id @default(autoincrement())
  tournamentId Int
  teamAlphaId  Int
  teamBetaId   Int
  winnerId     Int?

  phase TournamentPhase @default(GROUPS)

  teamAlpha  Team       @relation("TeamAlpha", fields: [teamAlphaId], references: [id])
  teamBeta   Team       @relation("TeamBeta", fields: [teamBetaId], references: [id])
  winner     Team?      @relation("Winner", fields: [winnerId], references: [id])
  tournament Tournament @relation(fields: [tournamentId], references: [id])

  scheduledAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Team?    @relation(fields: [teamId], references: [id])
  teamId      Int?

  @@map("matches")
  @@schema("esports")
}
