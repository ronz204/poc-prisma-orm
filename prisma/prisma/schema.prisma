generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["core"]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loans Loans[]

  @@map("users")
  @@schema("core")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loans Loans[]

  @@map("books")
  @@schema("core")
}

model Loans {
  id         Int       @id @default(autoincrement())
  userId     Int
  bookId     Int
  loanedAt   DateTime  @default(now())
  returnedAt DateTime?

  user User @relation(fields: [userId], references: [id])
  book Book @relation(fields: [bookId], references: [id])

  @@map("loans")
  @@schema("core")
}
