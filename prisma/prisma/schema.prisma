generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["esports"]
}

enum PlayerStatus {
  ACTIVE
  INACTIVE
  RETIRED
  BANNED

  @@map("player_status")
  @@schema("esports")
}

enum SponsorTier {
  GOLD
  SILVER
  BRONZE

  @@map("sponsor_tier")
  @@schema("esports")
}

enum TournamentStatus {
  REGISTRATION_OPEN
  REGISTRATION_CLOSED
  IN_PROGRESS
  COMPLETED
  CANCELLED

  @@map("tournament_status")
  @@schema("esports")
}

enum TournamentFormat {
  SINGLE_ELIMINATION
  DOUBLE_ELIMINATION
  ROUND_ROBIN
  GROUP_STAGE
  SWISS

  @@map("tournament_format")
  @@schema("esports")
}

model Player {
  id     Int          @id @default(autoincrement())
  name   String       @unique
  email  String       @unique
  isFree Boolean      @default(true)
  status PlayerStatus @default(ACTIVE)

  eloRating   Int @default(0)
  totalWins   Int @default(0)
  totalLosses Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("players")
  @@schema("esports")
}

model Team {
  id       Int     @id @default(autoincrement())
  tag      String  @unique
  name     String  @unique
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
  @@schema("esports")
}

model Sponsor {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  tier       SponsorTier @default(BRONZE)
  logoUrl    String?
  websiteUrl String?

  contactEmail String?
  contactPhone String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sponsors")
  @@schema("esports")
}

model Game {
  id        Int    @id @default(autoincrement())
  title     String @unique
  genre     String
  developer String
  publisher String

  tournaments Tournament[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("games")
  @@schema("esports")
}

model Tournament {
  id     Int              @id @default(autoincrement())
  title  String           @unique
  gameId Int

  status TournamentStatus @default(REGISTRATION_OPEN)
  format TournamentFormat @default(SINGLE_ELIMINATION)

  maxTeams    Int
  minTeamSize Int
  maxTeamSize Int

  prizePool Decimal
  currency  String

  registrationStart DateTime
  registrationEnd   DateTime
  tournamentStart   DateTime
  tournamentEnd     DateTime

  game Game @relation(fields: [gameId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tournaments")
  @@schema("esports")
}
