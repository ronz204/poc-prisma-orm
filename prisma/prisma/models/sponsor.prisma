enum SponsorTier {
  GOLD
  SILVER
  BRONZE

  @@map("sponsor_tier")
  @@schema("esports")
}

model Sponsor {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  email String?
  phone String?

  tier       SponsorTier
  logoUrl    String?
  websiteUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sponsors")
  @@schema("esports")
}
