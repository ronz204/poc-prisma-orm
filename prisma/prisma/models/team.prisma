model Team {
  id       Int     @id @default(autoincrement())
  tag      String  @unique
  name     String  @unique
  logoUrl  String?
  isActive Boolean @default(true)

  members       Member[]
  participants  Participant[]
  registrations Registration[]

  fromTransfers Transfer[] @relation("FromTeamTransfers")
  toTransfers   Transfer[] @relation("ToTeamTransfers")

  teamAlphaMatches  Match[] @relation("TeamAlphaMatches")
  teamBetaMatches   Match[] @relation("TeamBetaMatches")
  teamWinnerMatches Match[] @relation("TeamWinnerMatches")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
  @@schema("esports")
}
