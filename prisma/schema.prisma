generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  email      String   @unique
  password   String
  biography  String
  pictureUrl String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Plan {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  description     String
  monthlyPrice    Decimal
  periodicityDays Int
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
